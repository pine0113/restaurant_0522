
<div class="container">
  <div class="row">

    <% if @user.errors.any? %>
     
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
       <hr>
    <% end %>

     <h2>Edit Profile</h2>
    <%= form_for   @user do |f| %>

       <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name , {class: "form-control"} %>
      </div>
      
     

      <div class="form-group">
      <%= f.label :intro, "自我介紹" %>
      <%= f.text_area :intro , {class: "form-control"}  %>
      </div>

      <div class="form-group">
      <%= f.label :avatar, "大頭照上傳" %>
      <%= image_tag @user.avatar, width: '300px' if @user.avatar? %>
      <%= f.file_field :avatar %>
      </div>

      <%= f.submit "Update" ,class: "btn btn-primary" %>
      <%= link_to "Cancel", user_path(current_user),class: "btn btn-default"  %>
    <% end %>
  


  </div>
</div>