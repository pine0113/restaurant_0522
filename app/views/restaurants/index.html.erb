<div class="container">
 
  <h1>餐廳前台</h1>

  <div class="row">


    <ul class="nav nav-tabs">
      <li role="presentation"><%= link_to '首頁', restaurants_path %></li>
      <li role="presentation"><%= link_to 'Feeds', feeds_restaurants_path %></li>
    </ul>


<ul class="nav nav-pills">
   <li role="presentation"><%= link_to "全部餐廳", root_path %></li>
    <% @categories.each do |category| %>
      <li role="presentation"><%= link_to category.name, category_path(category) %></li>
    <% end %>

</ul>



    <!-- restaurants list，有多寫restaurant-item的class style -->
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="restaurant-item">
          <%= image_tag restaurant.image, class: "img-responsive center-block" %>
          <div class="caption">
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
            <p class="label label-default"><%= restaurant.category.name %><p>
            <p><%= truncate(restaurant.description, length: 80) %></p>
          </div>
        </div>
      </div>
    <% end %>
      
    <div class="clearfix"></div>
    <!-- 有generate kaminari paginate bootstrap style -->
    <div class="text-center">
      <%= paginate @restaurants %>
    </div>
      

</div>