<div class="container">

<h1>餐廳後台</h1>

  <div class="row">
    <div class="col-md-12">

      <div>
        <%= link_to 'New Restaurant', new_admin_restaurant_path %>
      </div>

      <br>
    
        <table class="table table-hover table-striped table-bordered">
          <thead>
            <tr>
              <th>#</th>
              <th>Category</th>
              <th>Name</th>
              <th></th>
            </tr>
          </thead>
        
          <% @restaurants.each do |restaurant| %>
            <tr>
              <td><%= restaurant.id %> </td>
              <td>[<%= restaurant.category.name %>]</td>
              <td><%= restaurant.name %></td>
              <td><%= link_to 'Show', admin_restaurant_path(restaurant) %>
              <%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %>
              <%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data: {confirm:"Are you sure?"} %></td>
            </tr>
          <% end %>


        </table>

      <div class="text-center">
        <%= paginate @restaurants %>
      </div>

    </div>
  <div>
</div>